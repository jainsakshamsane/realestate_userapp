<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="820dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ooooooooooo"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/draw"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/verified"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/verify"
            android:layout_marginLeft="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textLayout22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textLayout"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/fullname"
                android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColorHint="#808080"
                />

            <TextView
                android:id="@+id/phone"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_below="@id/fullname"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColorHint="#808080"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:drawableLeft="@drawable/baseline_email_24"
                android:textSize="20dp"
                android:drawablePadding="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/baseline_password_24"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:textSize="20dp"
                android:drawableLeft="@drawable/baseline_description_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:textSize="20dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <TextView
                android:id="@+id/verify"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:background="@drawable/verifying"
                android:layout_below="@id/address"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="65dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="80dp"
                android:text="Get yourself Verify now!"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

        </RelativeLayout>

    </RelativeLayout>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/signin_button"
            android:textColor="@color/white"/>

</RelativeLayout>
</ScrollView>

